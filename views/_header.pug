header.header

  nav.nav.nav--tours
    a.nav__el(href="/") All tours
    form.nav__search
      button.nav__search-btn
        svg
          use(href="/img/icons.svg#icon-search")
      input.nav__search-input(type="text" name="search" placeholder="Search tours")

  div.header__logo
    img(src="/img/logo-white.png" alt="Natours logo")

  nav.nav.nav--user
    if user
      a.nav__el.nav__el--logout(href="#") Logout
      a.nav__el(href="#")
        img.nav__user-img(src=`/img/users/${user.photo ? user.photo : 'default.jpg'}` alt=`Profile picture of ${user.name}`)
        span #{user.name.split(' ')[0]}
    else
      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta(href='/signup') Sign up
